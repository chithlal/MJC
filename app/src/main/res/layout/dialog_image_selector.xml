<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/progress_dialog_size"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardCornerRadius="10dp"
    android:background="@color/half_transparent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/progress_dialog_size"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/progress_dialog_size"
        android:minHeight="@dimen/progress_dialog_size_height"
        android:padding="@dimen/progress_dialog_margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center"
           android:textSize="@dimen/text_size_selector_dia"
           android:text="@string/text_select_picture"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:src="@drawable/ic_baseline_camera_alt_24"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/select_camera"
                />
            <View
                android:layout_width="@dimen/gap_50_dp"
                android:layout_height="@dimen/gap_50_dp"
                />
            <ImageView
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:src="@drawable/ic_baseline_perm_media_24"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/select_gallery"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>