<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/home_card_radius"
    android:id="@+id/cv_card_slider"
    android:layout_margin="@dimen/bs_card_material_total_margin"
    android:elevation="@dimen/intro_cardview_elevation">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image_slider"
        android:id="@+id/iv_card_slider"
        android:scaleType="centerCrop"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_view_transparent_bg"
    android:textSize="@dimen/text_size_selector_dia"
    android:id="@+id/tv_slider_image_desc"
    android:layout_gravity="bottom"
    android:textColor="@color/white"
    android:padding="@dimen/bs_card_material_total_margin"
    tools:text="@string/title_activity"
    />
</androidx.cardview.widget.CardView>