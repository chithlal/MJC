<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/progress_dialog_size"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardCornerRadius="10dp"
    android:background="@color/half_transparent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/progress_dialog_size"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/progress_dialog_size"
        android:minHeight="@dimen/progress_dialog_size_height"
        android:padding="@dimen/progress_dialog_margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/dialog_animation_size"
        android:layout_height="@dimen/dialog_animation_size"
        android:layout_gravity="center"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_cacheComposition="true"
        app:srcCompat="@raw/simple_loading"
        android:id="@+id/dialog_animation"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_message"
        android:textSize="@dimen/dialog_text_size"
        tools:text="Alert"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/dialog_margin"
        android:textStyle="normal"
        android:textColor="@color/color_light_black"
        />
    </LinearLayout>

</androidx.cardview.widget.CardView>