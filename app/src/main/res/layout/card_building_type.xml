<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/home_card_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_menu_card_heigh"
    app:cardCornerRadius="@dimen/home_card_radius"
    app:cardElevation="8dp"
    android:translationZ="14dp">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/home_iv_menu_image"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home"

/>
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_tv_item_name"
        tools:text = "India"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_home_item_text"
        android:textSize="@dimen/text_size_home_item"/>
</LinearLayout>