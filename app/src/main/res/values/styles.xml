<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppShadow" parent="Theme.AppCompat.Light">
        <item name="android:translationY">0dp</item>
        <item name="android:translationX">0dp</item>
        <item name="android:translationZ">6dp</item>
    </style>
    <style name="MeasurementCardViewShadow" parent="CardView.Light">
        <item name="cardElevation">7dp</item>
        <item name="android:translationY">3dp</item>
    </style>
    <style name="EditeTextStyle" parent= "Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/app_edit_text_bg</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
